@model IEnumerable<Polyclinic.WEB.Models.SpecialityViewModel>

@{
    ViewBag.Title = "Специальности";
    int i = 1;
}
<div>
    <div style="float: right">
        @Html.ActionLink("Добавить специальность", "AddSpeciality", "Admin", new { @class = "FirstLink" })
    </div>
    <div>
        @Html.ActionLink("Назад", "Administrating", "Admin", new { @class = "FirstLink" })
    </div>
</div>

<br/>

@if (Model.Count() != 0)
{
    <div style="overflow-x:auto;">
        <table class="table table-hover table-bordered table-responsive table-striped">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Название</th>
                    <th>Редактирование</th>
                    <th>Удаление</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @{
                            <td>@i</td>
                            i++;
                        }
                        <td>@item.Name</td>
                        <td>@Html.ActionLink("Редактировать", "EditSpeciality", "Admin", new { id = item.Id }, new { @class = "SecondLink" })</td>
                        <td>@Html.ActionLink("Удалить", "DeleteSpeciality", "Admin", new { id = item.Id }, new { @class = "SecondLink" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h1>Специальности отсутствуют</h1>
}
