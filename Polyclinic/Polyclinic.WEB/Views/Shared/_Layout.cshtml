<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top: 0px;">
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Поликлиника", "MainPage", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["Status"].ToString() == "Заведующий")
                    {
                        <li>@Html.ActionLink("Панель управления", "Administrating", "Admin")</li>
                    }
                    @if (Session["Status"].ToString() == "Врач")
                    {
                        <li>@Html.ActionLink("Текущие заявки", "DoctorRecords", "Doctor")</li>
                    }
                    @if (Session["Status"].ToString() == "Пациент")
                    {
                        <li>@Html.ActionLink("Заказать талон", "ChooseSpeciality", "Patient")</li>
                        <li>@Html.ActionLink("Мои заявки", "PatientRecords", "Patient")</li>
                    }
                    <li>@Html.ActionLink("Статус: " + @Session["Status"], null, new { })</li>
                    @if (Session["Status"].ToString() == "Гость")
                    {
                        <li>@Html.ActionLink("Регистрация", "Registration", "Patient")</li>
                        <li>@Html.ActionLink("Вход", "LogIn", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Выход", "LogOut", "Home")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <h1>@ViewBag.Title</h1>
        <hr/>
        @RenderBody()
        <hr/>
        <footer>
                <h6>evseenkoroman4321@gmail.com – По всем вопросам</h6>
                <h6>&copy; @DateTime.Now.Year – Дипломный проект</h6>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
